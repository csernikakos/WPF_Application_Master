<Page x:Class="WpfApplication1.Pages.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="660"
      Title="RequestPage">

    <Grid>
        <DataGrid x:Name="dtgRequests" ItemsSource="{Binding Requests}" SelectedItem="{Binding SelectedRequest}" HorizontalAlignment="Left" Height="234" Margin="42,56,0,0" VerticalAlignment="Top" Width="570" AutoGenerateColumns="False"  ColumnWidth="*" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
               <!-- <DataGridTextColumn Binding="{Binding PersonID}" Header="PersonID"/> -->
                <DataGridTextColumn Binding="{Binding Person}" Header="PersonID"/>
               <!--  <DataGridTextColumn Binding="{Binding RoleID}" Header="RoleID"/> -->
                <DataGridTextColumn Binding="{Binding Role}" Header="Role"/>
                <DataGridTextColumn Binding="{Binding ValidityStart, StringFormat=yyyy.MM.dd}" Header="ValidityStart"/>
                <DataGridTextColumn Binding="{Binding ValidityEnd, StringFormat=yyyy.MM.dd}" Header="ValidityEnd"/>
               <!-- <DataGridTextColumn Binding="{Binding RequestTypeID}" Header="RequestTypeID"/> -->
                <DataGridTextColumn Binding="{Binding RequestType}" Header="Request Type"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAddNewRequest" Content="Create New Reuqest" HorizontalAlignment="Left" Margin="42,326,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.307,0.2" Click="btnAddNewRequest_Click"/>
        <Button x:Name="btnDeleteRequest" Content="Remove Selected" Command="{Binding RemoveCommand}" HorizontalAlignment="Left" Margin="202,326,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.387,-0.15" Click="btnDeleteRequest_Click"/>

    </Grid>
</Page>
