<Page x:Class="WpfApplication1.Pages.RequestHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="660"
      Title="RequestHistoryPage">

    <Grid>
        <DataGrid x:Name="dtgRequestHistory" ItemsSource="{Binding Decisions}" HorizontalAlignment="Left" Height="227" Margin="76,89,0,0" VerticalAlignment="Top" Width="491">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Approver}" Header="Action" Width="SizeToCells" MinWidth="60"/>
                <DataGridTextColumn Binding="{Binding Person1}" Header="Role" Width="SizeToCells" MinWidth="60"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblName" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="25" />
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="492,359,0,0" VerticalAlignment="Top" Width="75" Click="btnBack_Click"/>
        <Label x:Name="lblRole" Content="role" HorizontalAlignment="Left" Margin="16,53,0,0" VerticalAlignment="Top" FontSize="15" />

    </Grid>
</Page>
